# ==============================================
# DISPUTATIO — Variáveis de Produção
# Copie para .env.prod e preencha os valores
# ==============================================

# Banco de Dados (PostgreSQL integrado)
POSTGRES_USER="disputatio_user"
POSTGRES_PASSWORD="SUA_SENHA_SEGURA_AQUI"
POSTGRES_DB="disputatio_db"

# A URL do DB referenciando o DB e porta de rede interna do Compose (db:5432)
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}?schema=public"

# Auth.js (NextAuth v5)
AUTH_SECRET="SUA_CHAVE_SECRETA_AQUI_GERADA_COM_OPENSSL"
AUTH_TRUST_HOST=true
AUTH_URL="https://disputatio.com.br"

# Gateway ISP — rede descentralizada de vídeos
GATEWAY_URL="https://video.disputatio.com.br"

# Docker Hub (usuário para pull da imagem)
DOCKERHUB_USERNAME="xingubit"
